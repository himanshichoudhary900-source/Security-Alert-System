<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFEBEE"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/senderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From: user@example.com"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#D32F2F"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMERGENCY! I need help!"
        android:textSize="16sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/groupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group: Family"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: 22.8046, 86.2029"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/timestampText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024-01-15 14:30:00"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginBottom="12dp"/>

    <!-- EMERGENCY PHOTO - Big and visible -->
    <ImageView
        android:id="@+id/photoView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:background="#E0E0E0"
        android:contentDescription="Emergency photo"/>

    <Button
        android:id="@+id/openMapButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OPEN IN MAPS"
        android:textSize="14sp"
        android:backgroundTint="#1976D2"
        android:padding="12dp"/>

</LinearLayout>